@model StatisticUrlViewModel
@{
    ViewData["Title"] = "Statistic";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">URL Statistics</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Unique visits per day</h5>
            <p class="card-text fs-4">@Model.Views</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Top visitors by IP</h5>

            @if (Model.TopVisits.Any())
            {
                <table class="table table-striped table-bordered mt-3">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">IP Address</th>
                            <th scope="col">Visits</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var (visit, index) in Model.TopVisits
                       .Select((v, i) => (v, i + 1)))
                        {
                            <tr>
                                <td>@index</td>
                                <td>@visit.Ip</td>
                                <td>@visit.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No visits recorded yet.</p>
            }
        </div>
    </div>
</div>
