@model UrlInputViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex align-items-center justify-content-center">
    <div class="w-100 text-center" style="max-width: 500px;">
        <h2 class="mb-4">URL Shortener</h2>

        <form asp-controller="Url" asp-action="Shorter" method="post" novalidate>
            <div class="form-group mb-3">
                <label asp-for="Url" class="form-label fw-bold d-block">Enter URL</label>
                <input asp-for="Url" class="form-control form-control-lg mx-auto"
                       style="max-width: 400px;" placeholder="https://example.com" />
                <span asp-validation-for="Url" class="text-danger small d-block mt-2"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-link-45deg"></i> Shorten URL
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
